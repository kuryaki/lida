{{> head }}
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
    <a class="navbar-brand" href="/sec/dashboard">Follow Up</a>

    <div class="collapse navbar-collapse" id="navbarResponsive">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link" data-toggle="modal" href="/sec/logout">
            <i class="fa fa-fw fa-sign-out"></i>Logout</a>
        </li>
      </ul>
    </div>
  </nav>
  <div id="container" class="container">
    <div class="row">
      <div class="col-sm-10 offset-sm-1">
        {{#application}}
        <form id="followups-form" action="/sec/followups/{{id}}" method="post">
            <div class="card">
              <div class="card-header text-center">
                <h1>{{title}} at {{company.name}}</h1>
                <h5>{{city}}, {{state}} created {{creationDate}}</h5>
              </div>
              <div class="card-body">
                <div class="form-row">
                  <div class="form-group col-md-12">
                    <label for="followup-contact">Contact</label>
                    <div class="input-group">
                      <select class="custom-select" id="followup-contact" name="followup-contact">
                        <option selected>Choose...</option>
                        {{#contacts}}
                        <option value={{id}}>{{name}} - {{email}} - {{phone}}</option>
                        {{/contacts}}
                      </select>
                      <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button" data-toggle="modal" data-target="#create-contact-modal">Add Contact</button>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group col-md-8">
                    <label for="followup-type">Type</label>
                    <div class="input-group">
                      <select class="custom-select" id="followup-type" name="followup-type">
                        <option selected>Choose...</option>
                        <option value="ORAL_INTERVIEW">Oral Interview</option>
                        <option value="TECHNICAL_INTERVIEW">Technical Interview</option>
                        <option value="TECHNICAL_TEST">Technical Test</option>
                        <option value="MANAGERAL_INTERVIEW">Magager Interview</option>
                        <option value="PAPER_WORK">Paperwork</option>
                        <option value="OTHER">Other...</option>
                      </select>
                    </div>
                  </div>
                  <div class="form-group col-md-4">
                    <label for="datetimepicker">Date</label>
                    <input type="text" class="form-control datetimepicker-input" id="datetimepicker" name="followup-date" data-toggle="datetimepicker" data-target="#datetimepicker"/>
                  </div>
                </div>
              </div>
              <div class="card-footer">
                <div class="row justify-content-between no-gutters">
                  <button type="submit" class="btn btn-primary col-2">Create</button>
                  <a href="/sec/dashboard" class="btn btn-info col-2" role="button">Cancel</a>
                </div>
              </div>
            </div>
        </form>
        <!-- Modal -->
        <div class="modal fade" id="create-contact-modal" tabindex="-1" role="dialog" aria-labelledby="create-contact-label" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <form action="/sec/contacts/{{id}}" method="post">
                <div class="modal-header">
                  <h5 class="modal-title" id="create-contact-label">New contact for {{name}} at {{company.name}}</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <div class="form-group">
                    <label for="contact-name">Name</label>
                    <input type="text" class="form-control" name="contact-name" id="contact-name" autocomplete="off">
                  </div>
                  <div class="form-group">
                    <label for="contact-phone">Phonenumber</label>
                    <input type="text" class="form-control" name="contact-phone" id="contact-phone" autocomplete="off">
                  </div>
                  <div class="form-group">
                    <label for="contact-email">Email</label>
                    <input type="text" class="form-control" name="contact-email" id="contact-email" autocomplete="off">
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  <button type="submit" class="btn btn-primary">Create</button>
                </div>
              </form>
            </div>
          </div>
        </div>
        {{/application}}
      </div>
    </div>
  </div>
  {{> foot }}